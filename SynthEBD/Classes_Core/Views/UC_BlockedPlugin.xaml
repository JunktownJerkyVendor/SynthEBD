<UserControl x:Class="SynthEBD.UC_BlockedPlugin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthEBD"
             xmlns:plugins="clr-namespace:Mutagen.Bethesda.WPF.Plugins;assembly=Mutagen.Bethesda.WPF"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:VM_BlockedPlugin}"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"  HorizontalAlignment="Center" ToolTip="Select the plugin to block" ToolTipService.IsEnabled="{Binding Source={x:Static local:TooltipController.Instance}, Path=DisplayToolTips}">Plugin</TextBlock>
        <plugins:ModKeyPicker ModKey="{Binding ModKey}" Grid.Row="0" Grid.Column="1"  SearchableMods="{Binding LoadOrder}" />
        <TextBlock Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Center" ToolTip="Block NPCs modified by this plugin from receiving asset assignments" ToolTipService.IsEnabled="{Binding Source={x:Static local:TooltipController.Instance}, Path=DisplayToolTips}">Block Assets (Textures and Meshes)</TextBlock>
        <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding Path=Assets, Mode=TwoWay}"></CheckBox>
        <TextBlock Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Center" ToolTip="Block NPCs modified by this plugin from receiving a height assignment" ToolTipService.IsEnabled="{Binding Source={x:Static local:TooltipController.Instance}, Path=DisplayToolTips}">Block Height</TextBlock>
        <CheckBox Grid.Row="2" Grid.Column="1"  IsChecked="{Binding Path=Height, Mode=TwoWay}"></CheckBox>
        <TextBlock Grid.Row="3" Grid.Column="0"  HorizontalAlignment="Center">Block Body Shape</TextBlock>
        <CheckBox Grid.Row="3" Grid.Column="1"  IsChecked="{Binding Path=BodyShape, Mode=TwoWay}"></CheckBox>
        <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center">Block Head Parts</TextBlock>
        <CheckBox Grid.Row="4" Grid.Column="1"  IsChecked="{Binding Path=HeadParts, Mode=TwoWay}"></CheckBox>
        <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Beards</TextBlock>
        <CheckBox Grid.Row="5" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsBeard, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Brows</TextBlock>
        <CheckBox Grid.Row="6" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsBrows, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Eyes</TextBlock>
        <CheckBox Grid.Row="7" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsEyes, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Faces</TextBlock>
        <CheckBox Grid.Row="8" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsFace, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Hair</TextBlock>
        <CheckBox Grid.Row="9" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsHair, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Misc Head Parts</TextBlock>
        <CheckBox Grid.Row="10" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsMisc, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
        <TextBlock Grid.Row="11" Grid.Column="0" HorizontalAlignment="Center" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}">Block Scars</TextBlock>
        <CheckBox Grid.Row="11" Grid.Column="1"  IsChecked="{Binding Path=HeadPartsScars, Mode=TwoWay}" Visibility="{Binding HeadParts, Converter={StaticResource BoolToVis}}"></CheckBox>
    </Grid>
</UserControl>
