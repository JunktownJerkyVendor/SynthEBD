<UserControl x:Class="SynthEBD.UC_SettingsTexMesh"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthEBD" d:DataContext="{d:DesignInstance Type=local:VM_SettingsTexMesh}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0">Allow config files to change NPC textures</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Path=bChangeNPCTextures, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="1">Allow config files to change NPC meshes</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="1" IsChecked="{Binding Path=bChangeNPCMeshes, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="2">Patch NPCs with custom bodies</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="2" IsChecked="{Binding Path=bApplyToNPCsWithCustomSkins, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="3">Patch NPCs with custom faces</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="3" IsChecked="{Binding Path=bApplyToNPCsWithCustomFaces, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="4">Forward armature from existing WNAM if available</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="4" IsChecked="{Binding Path=bForwardArmatureFromExistingWNAMs, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="5">Display popup alerts from config files</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="5" IsChecked="{Binding Path=bDisplayPopupAlerts, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="6">Generate permutation assignment log</TextBlock>
            <CheckBox Grid.Column="1" Grid.Row="6" IsChecked="{Binding Path=bGenerateAssignmentLog, Mode=TwoWay}"></CheckBox>

            <TextBlock Grid.Column="0" Grid.Row="7">Asset Path Trimming</TextBlock>
            <Expander Grid.Column="1" Grid.Row="7">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding TrimPaths, UpdateSourceTrigger=Default}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center">Remove "</TextBlock>
                                    <TextBox Text="{Binding PathToTrim, UpdateSourceTrigger=PropertyChanged}" MinWidth="60" HorizontalContentAlignment="Left"/>
                                    <TextBlock VerticalAlignment="Center">\" from ".</TextBlock>
                                    <TextBox Text="{Binding Extension, UpdateSourceTrigger=PropertyChanged}" MinWidth="35" HorizontalContentAlignment="Left"/>
                                    <TextBlock VerticalAlignment="Center">" file paths</TextBlock>
                                    <Button VerticalAlignment="Center" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.RemoveTrimPath}" CommandParameter="{Binding}" Foreground="FireBrick" Margin="5 0 0 0">X</Button>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Command="{Binding AddTrimPath}" Foreground="LightGreen">Add New</Button>
                </StackPanel>
            </Expander>

            <ItemsControl Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2" ItemsSource="{Binding AssetPacks, UpdateSourceTrigger=PropertyChanged}" Margin="0 15 0 0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:VM_AssetPack}">
                        <local:UC_AssetPack Background="Black" Margin="0 0 0 10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Grid.Column="0" Grid.Row="10" Orientation="Horizontal" Grid.ColumnSpan="2">
                <Button Command="{Binding AddNewAssetPackConfigFile}" Foreground="LightGreen" Margin="5">Create New Config File</Button>
                <Button Command="{Binding InstallFromArchive}" Foreground="LightGreen" Margin="5">Install Config from Archive</Button>
                <Button Command="{Binding InstallFromJson}" Foreground="YellowGreen" Margin="5">Install Config Json File</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
